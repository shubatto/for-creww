<% provide(:title, '入力画面') %>
<h1>お問い合わせ</h1>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for @inquiry, url: { action: 'confirm' } do |f| %>
			<%= render 'shared/error_messages', object: @inquiry %>

			<%= f.label	:name, 'お名前' %>
			<%= f.text_field :name, class: 'form-control' %>

			<%= f.label :email, 'メールアドレス' %>
			<%= f.email_field :email, class: 'form-control' %>

			<%= f.label	:inquiry_type_id, 'お問い合わせの種類' %>
			<%= f.select :inquiry_type_id, InquiryType.all.map{ |t| [t.name, t.id] }, { :selected => @inquiry.inquiry_type_id }, { class: 'form-control' } %>

			<%= f.label :content, '内容' %>
			<%= f.text_area :content, class: 'form-control' %>

			<%= f.submit '確認', class: 'btn btn-primary' %>
		<% end %>
	</div>
</div>
